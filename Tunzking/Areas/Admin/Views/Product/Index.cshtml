@model List<Product>

<div class="container">
    <div class="row pt-4 pb-4">
        <div class="col-6">
            <h2>
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-outline-dark">
                <i class="ri-add-circle-line"></i> Create New Product
            </a>
        </div>
    </div>

    <table id="tblData" class="display">
        <thead>
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Brand
                </th>
                <th>
                    Category
                </th>
                <th>
                    Current Price
                </th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/product.js"></script>
}
