@model Register

<form method="post">
    <div class="border p-3 mt-4 shadow">
        <div class="row">
            <div class="col-6">
                <h2>Register</h2>
            </div>
            <div class="col-6 text-end">
                <div>Already Registered? <a asp-action="Login" asp-controller="Account" class="text-info">Login</a></div>
            </div>
            <hr />
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label asp-for="FirstName" class="form-label mt-4"></label>
                <input asp-for="FirstName" class="form-control">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="LastName" class="form-label mt-4"></label>
                <input asp-for="LastName" class="form-control">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Email" class="form-label mt-4"></label>
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="PhoneNumber" class="form-label mt-4"></label>
                <input asp-for="PhoneNumber" class="form-control">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Password" class="form-label mt-4"></label>
                <input asp-for="Password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="StreetAddress" class="form-label mt-4"></label>
                <input asp-for="StreetAddress" class="form-control">
                <span asp-validation-for="StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="City" class="form-label mt-4"></label>
                <input asp-for="City" class="form-control">
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserType" class="form-label mt-4"></label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="User" asp-for="UserType" value="User" checked>
                    <label class="form-check-label" for="User">User</label>
                </div>
                @if(User.IsInRole("Admin"))
                {
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="Admin" asp-for="UserType" value="Admin">
                    <label class="form-check-label" for="Admin">Admin</label>
                </div>
                }
                
            </div>
        </div>
        <div class="row mt-4 col-md-6">
            @if(User.IsInRole("Admin"))
            {
            <div class="col-6">
                <button type="submit" class="btn btn-success form-control">Create</button>
            </div>
            }
            else
            {
            <div class="col-6">
                <button type="submit" class="btn btn-success form-control">Register</button>
            </div>
            }
            <div class="col-6">
                <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-secondary form-control">
                    Back to Home
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}